<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/Theme.Deckster</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_animated</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/by_1</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@color/teal_200</item>
        <item name="android:navigationBarColor">@color/teal_700</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>